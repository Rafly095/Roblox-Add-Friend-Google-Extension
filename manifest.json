{
  "manifest_version": 3,
  "name": "Roblox Friend Request Helper",
  "version": "1.0",
  "permissions": ["storage", "cookies", "scripting", "activeTab"],
  "host_permissions": ["https://*.roblox.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "32": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
